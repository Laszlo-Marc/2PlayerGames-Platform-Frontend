            </Grid>
            <Grid Width="920" Height="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>


                <Border Grid.Row="0" 
                        CornerRadius="10"
                        BorderBrush="Aqua" 
                        BorderThickness="2" 
                        Margin="55,10,661,34"
                >
                    <Image Source="Images/Human.png" Margin="22,25,21,18"/>
                </Border>
