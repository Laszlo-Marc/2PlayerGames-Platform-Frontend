                    <Grid>
                        <Grid.Resources>
                            <!-- Define the rotation animation -->
                            <Storyboard x:Key="RotationStoryboard" RepeatBehavior="Forever">
                                <!-- Define rotation animation for each ellipse -->
                                <!-- Ellipse 1 -->
                                <DoubleAnimation
                                    Storyboard.TargetName="Ellipse1"
                                    Storyboard.TargetProperty="Opacity"
                                    From="1" To="0" Duration="0:0:0.25" BeginTime="0:0:0" AutoReverse="True" AccelerationRatio="0.3"/>
                                <DoubleAnimation
                                    Storyboard.TargetName="Ellipse2"
                                    Storyboard.TargetProperty="Opacity"
                                    From="1" To="0" Duration="0:0:0.25" BeginTime="0:0:0.5" AutoReverse="True" />
